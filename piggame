    .game {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 20px;
    }

    .players {
      display: flex;
      justify-content: center;
      align-items: center;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }

    .player {
      width: 300px;
      padding: 20px;
      background: #fff;
      color: #000;
